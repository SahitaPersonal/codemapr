{
  "name": "codeflow-pro",
  "displayName": "CodeFlow Pro",
  "description": "Advanced code analysis and flowchart visualization for TypeScript, JavaScript, and React projects",
  "version": "1.0.0",
  "publisher": "codeflow-pro",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "code analysis",
    "flowchart",
    "typescript",
    "javascript",
    "react",
    "visualization",
    "dependency graph"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeflow-pro.generateFlowchart",
        "title": "Generate Flowchart",
        "category": "CodeFlow Pro",
        "icon": "$(graph)"
      },
      {
        "command": "codeflow-pro.generateProjectFlowchart",
        "title": "Generate Project Flowchart",
        "category": "CodeFlow Pro",
        "icon": "$(project)"
      },
      {
        "command": "codeflow-pro.generateFileFlowchart",
        "title": "Generate File Flowchart",
        "category": "CodeFlow Pro",
        "icon": "$(file-code)"
      },
      {
        "command": "codeflow-pro.analyzeComplexity",
        "title": "Analyze Code Complexity",
        "category": "CodeFlow Pro",
        "icon": "$(graph-line)"
      },
      {
        "command": "codeflow-pro.scanSecurity",
        "title": "Scan for Security Issues",
        "category": "CodeFlow Pro",
        "icon": "$(shield)"
      },
      {
        "command": "codeflow-pro.openSettings",
        "title": "Open Settings",
        "category": "CodeFlow Pro",
        "icon": "$(settings-gear)"
      },
      {
        "command": "codeflow-pro.showOutput",
        "title": "Show Output",
        "category": "CodeFlow Pro",
        "icon": "$(output)"
      },
      {
        "command": "codeflow-pro.clearCache",
        "title": "Clear Cache",
        "category": "CodeFlow Pro",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "codeflow-pro.generateFileFlowchart",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/",
          "group": "codeflow-pro@1"
        },
        {
          "command": "codeflow-pro.generateProjectFlowchart",
          "when": "explorerResourceIsFolder",
          "group": "codeflow-pro@2"
        }
      ],
      "editor/context": [
        {
          "command": "codeflow-pro.generateFileFlowchart",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/",
          "group": "codeflow-pro@1"
        },
        {
          "command": "codeflow-pro.analyzeComplexity",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/",
          "group": "codeflow-pro@2"
        },
        {
          "command": "codeflow-pro.scanSecurity",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/",
          "group": "codeflow-pro@3"
        }
      ],
      "commandPalette": [
        {
          "command": "codeflow-pro.generateFlowchart",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/"
        },
        {
          "command": "codeflow-pro.generateProjectFlowchart"
        },
        {
          "command": "codeflow-pro.generateFileFlowchart",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/"
        },
        {
          "command": "codeflow-pro.analyzeComplexity",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/"
        },
        {
          "command": "codeflow-pro.scanSecurity",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/"
        }
      ]
    },
    "configuration": {
      "title": "CodeFlow Pro",
      "properties": {
        "codeflow-pro.apiUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "CodeFlow Pro backend API URL"
        },
        "codeflow-pro.autoAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic code analysis on file save"
        },
        "codeflow-pro.showComplexityIndicators": {
          "type": "boolean",
          "default": true,
          "description": "Show complexity indicators in flowcharts"
        },
        "codeflow-pro.enableSecurityScanning": {
          "type": "boolean",
          "default": true,
          "description": "Enable security vulnerability scanning"
        },
        "codeflow-pro.flowchartTheme": {
          "type": "string",
          "enum": [
            "light",
            "dark",
            "ocean"
          ],
          "default": "light",
          "description": "Default flowchart theme"
        },
        "codeflow-pro.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size for analysis (in bytes)"
        },
        "codeflow-pro.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules/**",
            "dist/**",
            "build/**",
            "*.min.js"
          ],
          "description": "File patterns to exclude from analysis"
        }
      }
    },
    "keybindings": [
      {
        "command": "codeflow-pro.generateFlowchart",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/"
      },
      {
        "command": "codeflow-pro.generateProjectFlowchart",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "explorerViewletVisible"
      },
      {
        "command": "codeflow-pro.analyzeComplexity",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/"
      },
      {
        "command": "codeflow-pro.scanSecurity",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/"
      }
    ],
    "views": {
      "codeflow-pro": [
        {
          "type": "webview",
          "id": "codeflow-pro.flowchartView",
          "name": "Flowchart",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx)$/"
        }
      ],
      "codeflow-pro-settings": [
        {
          "type": "webview",
          "id": "codeflow-pro.settingsView",
          "name": "Settings"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeflow-pro",
          "title": "CodeFlow Pro",
          "icon": "$(graph)"
        },
        {
          "id": "codeflow-pro-settings",
          "title": "CodeFlow Pro Settings",
          "icon": "$(settings-gear)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SahitaPersonal/codemapr.git"
  },
  "license": "MIT",
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  }
}
